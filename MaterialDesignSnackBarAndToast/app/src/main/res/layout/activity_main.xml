<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.materialdesignsnackbarandtoast.MainActivity">


    <Button
        android:id="@+id/snackbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Snackbar" />

    <Button
        android:id="@+id/dismiss_snackbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/snackbar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Dismiss Snackbar" />

    <Button
        android:id="@+id/dismiss_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dismiss_snackbar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Dismiss Toast" />

    <Button
        android:id="@+id/custom_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dismiss_toast"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Custom Toast Codigo" />

    <Button
        android:id="@+id/custom_toast_xml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_toast"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Custom Toast Codigo y XML" />
</RelativeLayout>
